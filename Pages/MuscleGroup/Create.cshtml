@page
@model webex.Pages_MuscleGroup.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-white">Create</h1>

<h4 class="text-white">MuscleGroup</h4>
<hr />
<div class="row text-neutral" >
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MuscleGroup.Name" class="control-label"></label>
                <input asp-for="MuscleGroup.Name" class="form-control m-0" />
                <span asp-validation-for="MuscleGroup.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MuscleGroup.Location" class="control-label"></label>
                <select asp-for="MuscleGroup.Location" class="form-control"
                    asp-items="Html.GetEnumSelectList<Models.BodyLocation>()">
                        <option value="">---</option>
                </select>
                <span asp-validation-for="MuscleGroup.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MuscleGroup.MuscleFunction" class="control-label"></label>
                <select asp-for="MuscleGroup.MuscleFunction" class="form-control" 
                    asp-items="Html.GetEnumSelectList<Models.MuscleFunction>()">
                        <option value="">---</option>
                </select>
                <span asp-validation-for="MuscleGroup.MuscleFunction" class="text-danger"></span>
            </div>
            <div class="form-group m-0" type="">
                <label asp-for="MuscleGroup.Color" class="control-label">Choose the color for your MuscleGroup</label>
                <input asp-for="MuscleGroup.Color" class="form-control form-control-color p-0 m-0 mb-2" type="color"  />
                <span asp-validation-for="MuscleGroup.Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary m-0" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

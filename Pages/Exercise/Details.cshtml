@page
@model webex.Pages_Exercise.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-white">Details</h1>

<div>
    <h4 class="text-white">Exercise</h4>
    <hr />
    <dl class="row text-white">
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Exercise.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Exercise.Name)
        </dd>
         <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Exercise.MuscleGroups)
        </dt>
        <dd class="col-sm-10 text-neutral">
            @foreach(var mg in Model.Exercise.MuscleGroups){
                <span class="badge" style="color: @mg.Color; border-color: @mg.Color">@mg.Name</span> 
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Exercise.Color)
        </dt>
        <dd class="col-sm-10">
            <input type="color" class="form-control-color form-control" value="@Model.Exercise.Color" disabled=true>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Exercise?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
